<Application x:Class="FC_AtemTallyServer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FC_AtemTallyServer"
             xmlns:converters="clr-namespace:FC_AtemTallyServer.Converters">
    <Application.Resources>

        <converters:BoolToTallyColorConverter x:Key="BoolToTallyColorConverter" />
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#c2cdcf" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="#000000" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
    </Application.Resources>
</Application>
