<Window x:Class="FC_AtemTallyServer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FC_AtemTallyServer"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800">
    <Grid>
        <StackPanel Width="200" Margin="10">
            <Label FontWeight="Bold" >Program</Label>
            <TextBox FontWeight="Bold" FontSize="50" HorizontalContentAlignment="Center" 
                     Foreground="White" Background="Red" 
                     Text="{Binding ProgramInputValue, FallbackValue='-1', TargetNullValue='-1'}" />
            <Label FontWeight="Bold" >Preview</Label>
            <TextBox FontWeight="Bold" FontSize="50" HorizontalContentAlignment="Center" 
                     Foreground="White" Background="Lime" 
                     Text="{Binding PreviewInputValue, FallbackValue='-1', TargetNullValue='-1'}" />
        </StackPanel>
    </Grid>
</Window>
